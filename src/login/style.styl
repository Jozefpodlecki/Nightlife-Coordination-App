$white = white;
$black = black;

.wrapper
    width 100%
    height: 100%
    display flex
    align-items center
    justify-content center

.login
    padding 1rem
    width 400px

    &__header
        font-size 2rem
        text-align center

    &__field
        margin-top 1rem
        display flex

    &__submit, &__input
        border 1px solid $white
        color $white
        width 100%

    &__input
        background: transparent
        padding .5rem
        transition all .3s ease-in
        color $white

        &::placeholder
            color $white

        &:focus
            outline none

    &__submit
        background: lighten($black, 10%)
        padding .5rem 1rem
        cursor pointer
        transition background .3s ease-in

        &:hover
            background: lighten($black, 20%)