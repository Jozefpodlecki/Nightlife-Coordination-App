.loader
    display flex
    align-items center
    justify-content center
    width 100%
    height 100%

    &__item
        margin-left 1rem
        width 1rem
        height 8rem
        background white        
        for delay in (1..5)
            &:nth-child({delay})
                animation: .8s linear delay * .2s forwards infinite running bars

@keyframes bars {
    0% {
        transform: scaleY(1);
    }
    50% {
        transform: scaleY(.5);
    }
    100% {
        transform: scaleY(1);
    }
}