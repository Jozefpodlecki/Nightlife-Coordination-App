html, body
    height 100%
    box-sizing border-box
    margin 0
    color white
    
.root
    height inherit
    display flex
    flex-direction column

.content
    flex 1 1 auto
    overflow hidden

.footer
    flex 0 0 auto

.title
    font-size 3rem
    color white
    text-align center

.background
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    z-index -1
    background url("./assets/background.jpg") center center / cover no-repeat
    filter blur(2px) brightness(0.5)